{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <article style="margin-top: 20px;">

         {% if isFavorited %}
            <a href="{{ path('favorites_remove', {id: favoriteId}) }}" class="button secondary">Unfavorite</a>
        {% else %}
            <a href="{{ path('favorites_add', {name: poke.name}) }}" class="button">Favorite</a>
        {% endif %}

        <figure>
            <img width="50%" src="{{ poke.image }}" alt="{{ poke.name }}">
        </figure>
        

        <h1>{{ poke.name|title }}</h1>
        <p>
            {{ poke.flavorText }}
        </p>
        <p>
            {% for type in poke.types %}
                <a href="{{ path('pokemon_search', {'types': [type.name]}) }}">{{ type.name|title }}</a>
            {% endfor %}
        </p>
        <dl>
            <dt>Pokédex №</dt>
            <dd>#{{ poke.id }}</dd>
            <dt>Abilities</dt>
            <dd>
                <ul>
                    {% for ability in poke.abilities %}
                        <li>{{ ability.name }}</li>
                        <ul>
                            <li>
                                {{ ability.shortEffect }}
                            </li>
                        </ul>
                    {% endfor %}
                </ul>
            </dd>
        </dl>
    </article>

{% endblock %}